<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salesman_account_report_wizard_form_view" model="ir.ui.view">
            <field name="name">salesman.account.report.wizard.form</field>
            <field name="model">salesman.account.report.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="salesman_id"/>
                    </group>
                    <footer>
                        <button string="preuba" name="action_open_window" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

               <act_window id="quant_lot_repack_wizard_action"
            name="Wizard prueba"
            res_model="salesman.account.report.wizard"
            view_mode="form" target="new"/>

                 <menuitem name="Reporte"
            id="salesman_account_report_wizard_menuitem"
            parent="stock.menu_stock_warehouse_mgmt"
            sequence="45"
            action="quant_lot_repack_wizard_action"/>
    </data>
</odoo>
