<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de Liquidaciones -->
    <record id="view_settlements" model="ir.ui.view">
        <field name="name">Liquidaciones</field>
        <field name="model">sale.settlements</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_tittle">
                        <h1>
                            <span>
                            LIQUIDACIONES
                            </span>
                        </h1>
                    </div>
                    <group>
                        <div class="address_format">
                            <label for="note" string="Note:" />
                             <field name="note" style="width: 5%" />
                             <label for="journey" string="Journey:" />
                             <field name="journey" style="width: 5%" />
                             <label for="company" string="Company:" />
                             <field name="company" style="width: 20%" />
                        </div>
                    </group>
                    <field name="settlements_line_ids" mode="tree,kanban">
                        <tree editable="bottom" string="Lineas de Liquidaciones">
                            <field name="date" />
                            <field name="product_id" />
                            <field name="product_uom" />
                            <field name="box_emb" />
                            <field name="box_rec" />
                            <field name="price_unit" />
                            <field name="amount" />
                            <field name="purcharse_price" attrs="{'column_invisible': [('parent.price_type','=', 'close')]}" />
                            <field name="total" attrs="{'column_invisible': [('parent.price_type','=', 'close')]}" />
                        </tree>
                    </field>

                    <div class="oe_left">
                        <div class="oe_tittle">
                            <h4>
                                <span>
                                    Freight:
                                  </span>
                                <field name="freight" />
                            </h4>
                        </div>
                    </div>

                    <div class="oe_right">
                        <group>
                            <div class="oe_tittle">
                                <h2>
                                    <span>
                                      Viaje
                                    </span>
                                </h2>
                            </div>
                            <field name="check_maneuvers" attrs="{'invisible': True}" />
                            <field name="price_type" attrs="{'invisible': True}" />
                            <field name="check_adjustment" attrs="{'invisible': True}" />
                            <field name="check_storage" attrs="{'invisible': True}" />
                            <field name="check_freight_out" attrs="{'invisible': True}" />
                            <field name="check_freight_in" attrs="{'invisible': True}" />
                            <field name="check_aduana" attrs="{'invisible': True}" />
                            <field name="total" />
                            <field name="settlement" />
                            <field name="freight_in" attrs="{'invisible': [('check_freight_in', '=', False)]}" />
                            <field name="aduana" attrs="{'invisible': [('check_aduana', '=', False)]}" />
                            <field name="maneuvers" attrs="{'invisible': [('check_maneuvers', '=', False)]}" />
                            <field name="adjustment" attrs="{'invisible': [('check_adjustment', '=', False)]}" />
                            <field name="storage" attrs="{'invisible': [('check_storage', '=', False)]}" />
                            <field name="freight_out" attrs="{'invisible': [('check_freight_out', '=', False)]}" />
                            <field name="utility" />
                            <div name="utility_percentage">
                                <label for="utility_percentage" />
                                <field name="utility_percentage" class="oe_inline" />
                                (%%)
                            </div>
                            <!--<field name=""/>
                        <field name=""/>
                        <field name=""/>
                        <field name=""/>
                        <field name=""/>
                        <field name=""/> -->
                        <footer>
                            <button string="Print" class="oe_highlight" type="object" name="action_print_report" />
                        </footer>
                        </group>
                    </div>
                    
                </sheet>
            </form>
        </field>
    </record>
</odoo>