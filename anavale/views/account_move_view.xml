<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_add_lot_inherit_account" model="ir.ui.view">
        <field name="name">view.move.form.add.lot.inherit.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="lot_id" domain="[('product_id', '=', product_id)]"/>
            </xpath>
        </field>
    </record>

</odoo>
