<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="stock_quality_check_view_tree" model="ir.ui.view">
        <field name="name">stock.quality.check.view.tree</field>
        <field name="model">stock.quality.check</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="product_id" />
                <field name="lot_id"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="stock_quality_check_view_form" model="ir.ui.view">
        <field name="name">stock.quality.check.view.form</field>
        <field name="model">stock.quality.check</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="picking_id"/>
                        <field name="partner_id"/>
                        <field name="date"/>
                        <field name="product_id" options="{'no_create': True}"/>
                        <field name="lot_id" options="{'no_create': True}"/>
                        <field name="responsible_id"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="quality_lines">
                                <tree string="Stock Moves" editable="bottom">
                                    <field name="weight"/>
                                    <field name="count"/>
                                    <field name="damage"/>
                                    <field name="insect"/>
                                    <field name="decay"/>
                                    <field name="stripes"/>
                                    <field name="red"/>
                                    <field name="firmness"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Visual Notes" name="notes">
                            <field name="notes" placeholder="Add visual notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>    
</odoo>
