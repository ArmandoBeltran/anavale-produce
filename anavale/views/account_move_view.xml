<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_add_lot_inherit_account" model="ir.ui.view">
        <field name="name">view.move.form.add.lot.inherit.account</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page[1]/field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="lot_id" attrs="{'column_invisible' : [('parent.type', 'in', ('out_invoice', 'out_refund'))]}" domain="[('product_id', '=', product_id)]"/>
            </xpath>
        </field>
    </record>


    <record id="account_move_line_list_view_inherit_tags" model="ir.ui.view">
        <field name="name">account.move.line.list.view.inherit.tags</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='analytic_tag_ids']" position="after">
                <field name="tags_text" string="Analytic Tags (Name)" optional="hidden"/>
            </xpath>
        </field>
    </record>

